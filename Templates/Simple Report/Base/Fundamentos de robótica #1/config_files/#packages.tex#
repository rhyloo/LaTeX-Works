\newcommand*{\dummypic}[4]{%
\setlength{\fboxsep}{0pt}%
\begin{minipage}[t][0.2\textwidth][c]{0.25\textwidth}
\centering \includegraphics[#1]{#2}
\caption{#3}
\label{#4}
\end{minipage}%
}


